# --- OpenRouter Configuration ---
# Get from https://openrouter.ai/keys
OPENROUTER_API_KEY="sk-or-v1-..."

# Optional: For ranking on OpenRouter leaderboard (replace with your actual values if you have them)
# Can be any string, e.g., "http://localhost" or your project's repo URL
YOUR_SITE_URL="http://localhost/proCoder"
YOUR_SITE_NAME="proCoder-Terminal-AI"

# Choose a model available on OpenRouter (check their site for options)
# Free models often have :free suffix but might be rate-limited or less capable
# Examples: "google/gemini-flash-1.5", "mistralai/mistral-7b-instruct:free", "nousresearch/nous-hermes-2-mixtral-8x7b-dpo"
AI_MODEL_NAME="google/gemini-flash-1.5"

# --- Optional Git Configuration ---
# Set to true to automatically stage files after applying changes
GIT_AUTO_STAGE=false
# Set to true to automatically commit files after staging (requires GIT_AUTO_STAGE=true)
# Use with EXTREME caution!
GIT_AUTO_COMMIT=false